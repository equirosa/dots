# vim: filetype=conf
set icons on
set period 1
set drawbox on
set previewer ~/bin/preview
set info size:time
set shellopts '-eu'
#set ifs "\n"
set wrapscroll on
set scrolloff 10 # leave some space at the top and the bottom of the screen
set incsearch on

# Custom Mappings
map <enter> shell
map <backspace2> set hidden!
map <delete> $trash-put "$fx"
map <shift><delete> $rm "$fx"
map bg %make-wallpaper "$f"
map M push %mkdir<space>
map W %watchlist "$f"
map L $lazygit
map C $chezmoi add "$f"

# Sending
map D &dragon -a -x "$fx"
map sc $croc send "$fx"
map sf $ffsend upload "$fx"

## Compression
map zs &zs "$fx"
map zz &zp "$fx"
map zx &arc unarchive "$f"

# Custom commands
cmd open ${{
for f in "$fx";
do setsid xdg-open "$f" > /dev/null 2> /dev/null & done
}}
